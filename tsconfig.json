{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "resolveJsonModule": true,
        "target": "esnext",
        "strict": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "paths": {
            "tests": ["tests/*"],
            "@components/*": ["src/components/*"],
            "@hooks/*": ["src/hooks/*"],
            "@lib/*": ["src/lib/*"],
            "@layout/*": ["src/layout/*"],
            "@screens/*": ["src/screens/*"],
            "@stores/*": ["src/stores/*"],
            "@typings/*": ["src/typings/*"]
        }
    }
}
