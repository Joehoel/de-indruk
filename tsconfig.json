{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "resolveJsonModule": true,
        "target": "esnext",
        "strict": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "typeRoots": ["./src/typings", "node_modules/@types"],
        "paths": {
            "@components/*": ["src/components/*"],
            "@hooks/*": ["src/hooks/*"],
            "@lib/*": ["src/lib/*"],
            "@layout/*": ["src/layout/*"],
            "@screens/*": ["src/screens/*"],
            "@stores/*": ["src/stores/*"],
            "@typings/*": ["src/typings/*"],
            "@navigation/*": ["src/navigation/*"]
        }
    },
    "exclude": ["node_modules/"]
}
